<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.android.powerliftingquiz.MainActivity"
              android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Which lifts are used in Powerlifting competitions?"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textSize="15sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_squat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Squat"

                />
            <CheckBox
                android:id="@+id/checkbox_overhead_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overhead press"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/checkbox_bench_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bench press"
            android:layout_marginLeft="16dp"
            />
        <CheckBox
            android:id="@+id/checkbox_deadlift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadlift"
            android:layout_marginLeft="16dp"

            />
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How many attempts for each lift individual does a lifter get in a sanctioned competition?"

        />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_button_left_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Squat"

                />
            <RadioButton
                android:id="@+id/radio_button_left_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overhead press"
                android:layout_marginLeft="16dp"


                />





            <RadioButton
                android:id="@+id/radio_button_right_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bench press"
                android:layout_marginLeft="16dp"
                />
            <RadioButton
                android:id="@+id/radio_button_right_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadlift"
                android:layout_marginLeft="16dp"

                />
        </RadioGroup>


    </LinearLayout>










